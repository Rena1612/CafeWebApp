@model Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Order #@Model.Id Details</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Orders
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Order Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Order Date:</strong><br>
                        @Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")
                    </div>
                    <div class="col-md-6">
                        <strong>Current Status:</strong><br>
                        @switch (Model.Status)
                        {
                            case "Pending":
                                <span class="badge bg-warning">@Model.Status</span>
                                break;
                            case "Preparing":
                                <span class="badge bg-info">@Model.Status</span>
                                break;
                            case "Ready":
                                <span class="badge bg-primary">@Model.Status</span>
                                break;
                            case "Completed":
                                <span class="badge bg-success">@Model.Status</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@Model.Status</span>
                                break;
                        }
                    </div>
                </div>

                <hr>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Customer Name:</strong><br>
                        @Model.CustomerName
                    </div>
                    <div class="col-md-6">
                        <strong>Phone:</strong><br>
                        @Model.Phone
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Order Type:</strong><br>
                        @if (Model.IsTakeaway)
                        {
                            <span class="badge bg-info">Takeaway</span>
                        }
                        else
                        {
                            <span>Dine-in - Table @Model.TableNumber</span>
                        }
                    </div>
                    <div class="col-md-6">
                        <strong>Payment Method:</strong><br>
                        @Model.PaymentMethod
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>Special Instructions:</strong><br>
                            <div class="alert alert-info mt-2">@Model.Notes</div>
                        </div>
                    </div>
                }

                <hr>

                <h5 class="mb-3">Order Items</h5>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>$@item.UnitPrice.ToString("F2")</td>
                                <td>$@item.Subtotal.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-active">
                            <th colspan="3" class="text-end">Total:</th>
                            <th>$@Model.TotalAmount.ToString("F2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Update Status</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">Change Status To:</label>
                        <select name="status" class="form-select" required>
                            <option value="">-- Select Status --</option>
                            <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                            <option value="Preparing" selected="@(Model.Status == "Preparing")">Preparing</option>
                            <option value="Ready" selected="@(Model.Status == "Ready")">Ready</option>
                            <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                            <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                        </select>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-arrow-repeat"></i> Update Status
                        </button>
                    </div>
                </form>

                <hr>

                <div class="small text-muted">
                    <strong>Status Flow:</strong>
                    <ul class="mt-2">
                        <li>Pending → Order received</li>
                        <li>Preparing → Being prepared</li>
                        <li>Ready → Ready for pickup/delivery</li>
                        <li>Completed → Order fulfilled</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>