@model ShoppingCart

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container my-5">
    <h1 class="mb-4">
        <i class="bi bi-cart"></i> Shopping Cart
    </h1>

    @if (Model != null && Model.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th style="width: 150px;">Quantity</th>
                                    <th>Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(item.ImageUrl ?? "/images/placeholder.jpg")" 
                                                     alt="@item.ProductName" 
                                                     class="img-thumbnail me-3"
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                <strong>@item.ProductName</strong>
                                            </div>
                                        </td>
                                        <td class="align-middle">$@item.Price.ToString("F2")</td>
                                        <td class="align-middle">
                                            <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <div class="input-group input-group-sm">
                                                    <button type="button" class="btn btn-outline-secondary" 
                                                            onclick="decrementQty(@item.ProductId)">
                                                        <i class="bi bi-dash"></i>
                                                    </button>
                                                    <input type="number" 
                                                           class="form-control text-center" 
                                                           name="quantity" 
                                                           id="qty-@item.ProductId"
                                                           value="@item.Quantity" 
                                                           min="1" 
                                                           max="100"
                                                           onchange="this.form.submit()">
                                                    <button type="button" class="btn btn-outline-secondary" 
                                                            onclick="incrementQty(@item.ProductId)">
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                        <td class="align-middle">
                                            <strong>$@item.Subtotal.ToString("F2")</strong>
                                        </td>
                                        <td class="align-middle">
                                            <form asp-action="RemoveItem" method="post" class="d-inline">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Remove this item from cart?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Index", "Menu")" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Continue Shopping
                    </a>
                    <form asp-action="ClearCart" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger" 
                                onclick="return confirm('Clear entire cart?')">
                            <i class="bi bi-trash"></i> Clear Cart
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items (@Model.TotalItems)</span>
                            <span>$@Model.Total.ToString("F2")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total</strong>
                            <strong class="text-primary">$@Model.Total.ToString("F2")</strong>
                        </div>
                        <a href="@Url.Action("Index", "Checkout")" class="btn btn-success w-100 mb-2">
                            <i class="bi bi-credit-card"></i> Proceed to Checkout
                        </a>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-check text-success" style="font-size: 48px;"></i>
                        <p class="mt-2 mb-0"><small>Secure Checkout</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x" style="font-size: 100px; color: #ccc;"></i>
            <h3 class="mt-3">Your cart is empty</h3>
            <p class="text-muted">Add some delicious items from our menu!</p>
            <a href="@Url.Action("Index", "Menu")" class="btn btn-primary mt-3">
                <i class="bi bi-book"></i> Browse Menu
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function incrementQty(productId) {
            var input = document.getElementById('qty-' + productId);
            var currentVal = parseInt(input.value);
            if (currentVal < 100) {
                input.value = currentVal + 1;
                input.form.submit();
            }
        }

        function decrementQty(productId) {
            var input = document.getElementById('qty-' + productId);
            var currentVal = parseInt(input.value);
            if (currentVal > 1) {
                input.value = currentVal - 1;
                input.form.submit();
            }
        }
    </script>
}
