@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-dark text-white py-5" style="background: linear-gradient(135deg, #6f4e37, #d2691e);">
    <div class="container text-center">
        <h1 class="display-3 fw-bold mb-3">
            <i class="bi bi-cup-hot-fill"></i> Welcome to Our Cafe
        </h1>
        <p class="lead mb-4">Experience the finest coffee, pastries, and food in town</p>
        <a href="@Url.Action("Index", "Menu")" class="btn btn-light btn-lg">
            <i class="bi bi-book"></i> View Our Menu
        </a>
    </div>
</div>

<!-- Featured Products Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Featured Items</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" 
                             class="card-img-top" 
                             alt="@product.Name" 
                             style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@product.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h4 text-primary mb-0">$@product.Price.ToString("F2")</span>
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">No featured products available at the moment.</p>
            </div>
        }
    </div>
</div>

<!-- About Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2>About Our Cafe</h2>
                <p class="lead">We are passionate about serving the best coffee and food in a warm, welcoming atmosphere.</p>
                <p>Our menu features a carefully curated selection of premium coffee, fresh pastries, delicious sandwiches, and delightful desserts. Every item is prepared with love and the finest ingredients.</p>
                <a href="@Url.Action("About", "Home")" class="btn btn-outline-primary">Learn More</a>
            </div>
            <div class="col-md-6 text-center">
                <i class="bi bi-cup-hot" style="font-size: 150px; color: #6f4e37;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Why Choose Us</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <i class="bi bi-star-fill text-warning" style="font-size: 48px;"></i>
            <h4 class="mt-3">Quality Products</h4>
            <p>We use only the finest ingredients to ensure the best taste and quality.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-clock-fill text-info" style="font-size: 48px;"></i>
            <h4 class="mt-3">Fast Service</h4>
            <p>Quick and efficient service without compromising on quality.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-heart-fill text-danger" style="font-size: 48px;"></i>
            <h4 class="mt-3">Made with Love</h4>
            <p>Every item is prepared with care and passion by our dedicated team.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Refresh cart count after adding items
        $('form[action*="AddToCart"]').on('submit', function() {
            setTimeout(updateCartCount, 500);
        });
    </script>
}
