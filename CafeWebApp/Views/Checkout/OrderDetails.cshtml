@model Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-receipt"></i> Order Details</h1>
                <a href="@Url.Action("MyOrders", "Checkout")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Orders
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order #@Model.Id</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Date:</strong><br>
                            @Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")
                        </div>
                        <div class="col-md-6">
                            <strong>Status:</strong><br>
                            @switch (Model.Status)
                            {
                                case "Pending":
                                    <span class="badge bg-warning">@Model.Status</span>
                                    break;
                                case "Preparing":
                                    <span class="badge bg-info">@Model.Status</span>
                                    break;
                                case "Ready":
                                    <span class="badge bg-success">@Model.Status</span>
                                    break;
                                case "Completed":
                                    <span class="badge bg-success">@Model.Status</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </div>
                    </div>

                    <hr>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Customer Name:</strong><br>
                            @Model.CustomerName
                        </div>
                        <div class="col-md-6">
                            <strong>Phone:</strong><br>
                            @Model.Phone
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Type:</strong><br>
                            @if (Model.IsTakeaway)
                            {
                                <span class="badge bg-info">Takeaway</span>
                            }
                            else
                            {
                                <span>Dine-in - Table @Model.TableNumber</span>
                            }
                        </div>
                        <div class="col-md-6">
                            <strong>Payment Method:</strong><br>
                            @Model.PaymentMethod
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>Special Instructions:</strong><br>
                                @Model.Notes
                            </div>
                        </div>
                    }

                    <hr>

                    <h5 class="mb-3">Order Items</h5>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>$@item.UnitPrice.ToString("F2")</td>
                                    <td>$@item.Subtotal.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th colspan="3" class="text-end">Total:</th>
                                <th>$@Model.TotalAmount.ToString("F2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <i class="bi bi-info-circle"></i>
                <strong>Order Status:</strong><br>
                @if (Model.Status == "Pending")
                {
                    <p class="mb-0">Your order has been received and will be prepared soon.</p>
                }
                else if (Model.Status == "Preparing")
                {
                    <p class="mb-0">Your order is being prepared by our kitchen staff.</p>
                }
                else if (Model.Status == "Ready")
                {
                    @if (Model.IsTakeaway)
                    {
                        <p class="mb-0">Your order is ready for pickup!</p>
                    }
                    else
                    {
                        <p class="mb-0">Your order will be delivered to your table shortly.</p>
                    }
                }
                else if (Model.Status == "Completed")
                {
                    <p class="mb-0">Your order has been completed. Thank you!</p>
                }
            </div>
        </div>
    </div>
</div>