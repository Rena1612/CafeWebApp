@model Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 100px;"></i>
                <h1 class="mt-3">Thank You!</h1>
                <p class="lead">Your order has been placed successfully</p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Order #@Model.Id</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Date:</strong><br>
                            @Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")
                        </div>
                        <div class="col-md-6">
                            <strong>Status:</strong><br>
                            <span class="badge bg-warning">@Model.Status</span>
                        </div>
                    </div>

                    <hr>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Customer Name:</strong><br>
                            @Model.CustomerName
                        </div>
                        <div class="col-md-6">
                            <strong>Phone:</strong><br>
                            @Model.Phone
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Type:</strong><br>
                            @if (Model.IsTakeaway)
                            {
                                <span class="badge bg-info">Takeaway</span>
                            }
                            else
                            {
                                <span>Dine-in - Table @Model.TableNumber</span>
                            }
                        </div>
                        <div class="col-md-6">
                            <strong>Payment Method:</strong><br>
                            @Model.PaymentMethod
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>Special Instructions:</strong><br>
                                @Model.Notes
                            </div>
                        </div>
                    }

                    <hr>

                    <h5 class="mb-3">Order Items</h5>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>$@item.UnitPrice.ToString("F2")</td>
                                    <td>$@item.Subtotal.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th colspan="3" class="text-end">Total:</th>
                                <th>$@Model.TotalAmount.ToString("F2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <i class="bi bi-info-circle"></i> 
                <strong>What's Next?</strong><br>
                @if (Model.IsTakeaway)
                {
                    <p class="mb-0">Your order is being prepared. We'll notify you when it's ready for pickup!</p>
                }
                else
                {
                    <p class="mb-0">Your order will be delivered to Table @Model.TableNumber shortly.</p>
                }
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("MyOrders", "Checkout")" class="btn btn-primary me-2">
                    <i class="bi bi-list"></i> View My Orders
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="bi bi-house"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
