@model IEnumerable<Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container my-5">
    <h1 class="mb-4">
        <i class="bi bi-bag-check"></i> My Orders
    </h1>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>Order #@order.Id</strong>
                                <span class="badge bg-light text-dark">@order.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Status</small><br>
                                    @switch (order.Status)
                                    {
                                        case "Pending":
                                            <span class="badge bg-warning">@order.Status</span>
                                            break;
                                        case "Preparing":
                                            <span class="badge bg-info">@order.Status</span>
                                            break;
                                        case "Ready":
                                            <span class="badge bg-success">@order.Status</span>
                                            break;
                                        case "Completed":
                                            <span class="badge bg-success">@order.Status</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@order.Status</span>
                                            break;
                                    }
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Total Amount</small><br>
                                    <strong class="h5 text-success">$@order.TotalAmount.ToString("F2")</strong>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-12">
                                    <small class="text-muted">Order Type</small><br>
                                    @if (order.IsTakeaway)
                                    {
                                        <span class="badge bg-info">Takeaway</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Dine-in - Table @order.TableNumber</span>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">Items (@order.OrderItems.Count)</small>
                                <ul class="list-unstyled mt-2">
                                    @foreach (var item in order.OrderItems.Take(3))
                                    {
                                        <li class="mb-1">
                                            <i class="bi bi-dot"></i> @item.Quantity x @item.ProductName
                                        </li>
                                    }
                                    @if (order.OrderItems.Count > 3)
                                    {
                                        <li class="text-muted"><small>+ @(order.OrderItems.Count - 3) more items</small></li>
                                    }
                                </ul>
                            </div>

                            <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-outline-primary w-100">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 100px; color: #ccc;"></i>
            <h3 class="mt-3">No Orders Yet</h3>
            <p class="text-muted">You haven't placed any orders. Start browsing our menu!</p>
            <a href="@Url.Action("Index", "Menu")" class="btn btn-primary mt-3">
                <i class="bi bi-book"></i> Browse Menu
            </a>
        </div>
    }
</div>