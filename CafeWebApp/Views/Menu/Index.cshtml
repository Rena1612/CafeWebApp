@model IEnumerable<Product>

@{
    ViewData["Title"] = "Menu";
    var categories = ViewBag.Categories as IEnumerable<Category>;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
    var categoryName = ViewBag.CategoryName as string;
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">
                <i class="bi bi-book"></i> Our Menu
                @if (!string.IsNullOrEmpty(categoryName))
                {
                    <span class="text-muted"> - @categoryName</span>
                }
            </h1>
        </div>
    </div>

    <!-- Category Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group d-flex flex-wrap justify-content-center" role="group">
                <a href="@Url.Action("Index", "Menu")" 
                   class="btn @(selectedCategoryId == null ? "btn-primary" : "btn-outline-primary") m-1">
                    All Items
                </a>
                @if (categories != null)
                {
                    @foreach (var category in categories)
                    {
                        <a href="@Url.Action("Index", "Menu", new { categoryId = category.Id })" 
                           class="btn @(selectedCategoryId == category.Id ? "btn-primary" : "btn-outline-primary") m-1">
                            @category.Name
                        </a>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" 
                             class="card-img-top" 
                             alt="@product.Name"
                             style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-secondary mb-2 align-self-start">@product.Category?.Name</span>
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted flex-grow-1">
                                @(product.Description?.Length > 80 
                                    ? product.Description.Substring(0, 80) + "..." 
                                    : product.Description)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="h4 text-primary mb-0">$@product.Price.ToString("F2")</span>
                                    @if (product.InStock)
                                    {
                                        <span class="badge bg-success">In Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </div>
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Details", "Menu", new { id = product.Id })" 
                                       class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                    @if (product.InStock)
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> Add to Cart
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm w-100" disabled>
                                            Out of Stock
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No products available in this category.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Refresh cart count after adding items
        $('form[action*="AddToCart"]').on('submit', function() {
            setTimeout(updateCartCount, 500);
        });
    </script>
}
